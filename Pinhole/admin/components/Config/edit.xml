<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Site Settings</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Site Title</property>
				<widget class="SwatEntry" id="site_title">
					<property name="required" type="boolean">true</property>
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Meta Description</property>
				<widget class="SwatTextarea" id="site_meta_description">
					<property name="rows" type="integer">5</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Photos Per Page</property>
				<property name="note" translatable="yes">Maximum of 100 allowed</property>
				<widget class="SwatIntegerEntry" id="pinhole_photos_per_page">
					<property name="minimum_value" type="integer">1</property>
					<property name="maximum_value" type="integer">100</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Site Time Zone</property>
				<widget class="SwatTimeZoneEntry" id="date_time_zone" />
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Allow Search Engines to Index</property>
				<widget class="SwatCheckbox" id="pinhole_search_engine_indexable" />
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Google Analytics Account</property>
				<widget class="SwatEntry" id="analytics_google_account">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="image_container">
				<property name="title" translatable="yes">Header Image</property>
				<widget class="PinholeHeaderImageDisplay" id="image_preview" />
			</widget>
			<widget class="SwatDisclosure" id="change_image">
				<property name="title" translatable="yes">Replace Header Image</property>
				<property name="open" type="boolean">false</property>
				<widget class="SwatFormField">
					<widget class="SwatFileEntry" id="header_image">
						<property name="accept_mime_types[]">image/jpeg</property>
						<property name="accept_mime_types[]">image/png</property>
						<property name="accept_mime_types[]">image/gif</property>
					</widget>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swatml>
