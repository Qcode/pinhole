<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="index_frame">
		<property name="title" translatable="yes">Layouts</property>
		<widget class="SwatForm" id="index_form">
			<widget class="SwatTableView" id="index_view">
				<object class="SwatTableViewCheckboxColumn" id="checkbox">
					<object class="SwatCheckboxCellRenderer" id="items">
						<property name="value" type="data">id</property>
					</object>
				</object>
				<object class="AdminTableViewOrderableColumn" id="title">
					<property name="title" translatable="yes">Title</property>
					<object class="AdminTitleLinkCellRenderer">
						<property name="text" type="data">title</property>
						<property name="link">PinholeLayout/Edit?id=%s</property>
						<property name="link_value" type="data">id</property>
						<property name="stock_id">edit</property>
					</object>
				</object>
				<object class="SwatTableViewColumn" id="pagewidth">
					<property name="title" translatable="yes">Page Width</property>
					<object class="SwatTextCellRenderer">
						<property name="text" type="data">pagewidth</property>
					</object>
				</object>
				<object class="SwatTableViewColumn" id="sidebarposition">
					<property name="title" translatable="yes">Side-Bar Position</property>
					<object class="SwatTextCellRenderer">
						<property name="text" type="data">sidebarposition</property>
					</object>
				</object>
				<object class="SwatTableViewColumn" id="sidebarwidth">
					<property name="title" translatable="yes">Side-Bar Width</property>
					<object class="SwatTextCellRenderer">
						<property name="text" type="data">sidebarwidth</property>
					</object>
				</object>
			</widget>
		</widget>
	</widget>
</swatml>
