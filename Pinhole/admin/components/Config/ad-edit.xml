<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Ad Settings</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatContentBlock">
				<property name="content" translatable="yes">Include the  markup for embedding the ad in the selected position.</property>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Top of Page</property>
				<widget class="SwatTextarea" id="pinhole_ad_top">
					<property name="maxlength" type="integer">1024</property>
					<property name="rows" type="integer">5</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Bottom of Page</property>
				<widget class="SwatTextarea" id="pinhole_ad_bottom">
					<property name="maxlength" type="integer">1024</property>
					<property name="rows" type="integer">5</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Only display ads to visitors who have arrived via another website</property>
				<widget class="SwatCheckbox" id="pinhole_ad_referers_only" />
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swatml>
