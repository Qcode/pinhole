<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<!-- header -->
	<widget class="SwatContainer" id="header_content">
		<widget class="SwatForm" id="search_form">
			<property name="action">search</property>
			<widget class="SwatRadioList" id="search_options" />
			<widget class="SwatFormField">
				<property name="title">Keywordsâ€¦</property>
				<property name="access_key" type="string">4</property>
				<widget class="SwatSearchEntry" id="keywords">
					<property name="size" type="integer">30</property>
					<property name="maxlength" type="integer">255</property>
				</widget>
				<widget class="SwatButton">
					<property name="title">Search</property>
					<property name="classes[]">compact-button</property>
				</widget>
			</widget>
		</widget>
		<widget class="SwatDisplayableContainer" id="sub_hd">
			<widget class="PinholeTagListView" id="tag_list_view" />
			<widget class="PinholePhotoScroller" id="photo_scroller" />
		</widget>
	</widget>

	<!-- sidebar -->
	<widget class="SwatContainer" id="sidebar_content">
		<widget class="PinholeSubTagListView" id="sub_tag_list_view" />
	</widget>

	<!-- content -->
	<widget class="SwatContainer" id="content">
		<widget class="SwatDisplayableContainer" id="description_container">
			<widget class="SwatContentBlock" id="description" />
		</widget>
		<widget class="SwatDisclosure" id="photo_details">
			<property name="title">Photo Details</property>
			<property name="open" type="boolean">false</property>
			<widget class="SwatDetailsView" id="photo_details_view">
				<object class="SwatDetailsViewField" id="photo_date">
					<property name="title">Taken</property>
					<object class="PinholeDateTagCellRenderer">
						<property name="date" type="data">photo_date</property>
					</object>
				</object>
				<object class="SwatDetailsViewField" id="publish_date">
					<property name="title">Published</property>
					<object class="SwatDateCellRenderer">
						<property name="date" type="data">publish_date</property>
					</object>
				</object>
			</widget>
		</widget>
		<widget class="SwatFieldset" id="comments_fieldset">
			<property name="title" type="string">Replies to Nick's Photos</property>
			<widget class="SwatForm" id="comments" />
		</widget>
		<widget class="SwatForm" id="reply">
			<widget class="SwatDisclosure" id="reply_disclosure">
				<property name="title" type="string">Post a Comment</property>
				<property name="open" type="boolean">false</property>
				<widget class="SwatFormField">
					<property name="title" type="string">Name</property>
					<widget class="SwatEntry" id="fullname">
						<property name="required" type="boolean">true</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" type="string">Email Address</property>
					<widget class="SwatEntry" id="email"/>
				</widget>
				<widget class="SwatFormField">
					<property name="title" type="string">Web Address</property>
					<widget class="SwatEntry" id="webaddress"/>
				</widget>
				<widget class="SwatFormField">
					<widget class="SwatReCaptcha" id="recaptcha">
						<property name="public_key" type="string">6LcMHwAAAAAAAMLTQmoBZy0eEAdV9FO3r7-5iiz6</property>
						<property name="private_key" type="string">6LcMHwAAAAAAAAaNyPZdWk81OwYoeRtCUGimCVqr</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" type="string">Rate This Photo</property>
					<widget class="SwatFlydown" id="rating_flydown" />
				</widget>
				<widget class="SwatFormField">
					<property name="title" type="string">Comment</property>
					<widget class="SwatTextarea" id="bodytext">
						<property name="required" type="boolean">true</property>
					</widget>
				</widget>
				<widget class="SwatFooterFormField">
					<widget class="SwatButton">
						<property name="title" type="string">Submit Button</property>
					</widget>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
