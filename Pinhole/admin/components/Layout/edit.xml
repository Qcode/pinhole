<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Layout</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Title</property>
				<widget class="SwatEntry" id="title">
					<property name="required" type="boolean">true</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Page Width</property>
				<widget class="SwatRadioList" id="page_width">
					<property name="required" type="boolean">true</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Side-Bar Position</property>
				<widget class="SwatRadioList" id="sidebar_position">
					<property name="required" type="boolean">true</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Side-Bar Width</property>
				<widget class="SwatRadioList" id="sidebar_width">
					<property name="required" type="boolean">true</property>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swatml>
