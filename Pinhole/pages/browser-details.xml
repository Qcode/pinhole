<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<!-- header -->
	<widget class="SwatContainer" id="header_content">
		<widget class="SwatDisplayableContainer" id="sub_hd">
			<widget class="PinholeTagListView" id="tag_list_view" />
			<widget class="PinholePhotoNextPrev" id="photo_next_prev" />
		</widget>
	</widget>

	<!-- content -->
	<widget class="SwatContainer" id="content">
		<!-- {{{ Photo details -->
		<widget class="SwatDisplayableContainer" id="photo_content">
			<widget class="SwatDisplayableContainer" id="description_container">
				<widget class="SwatContentBlock" id="description" />
			</widget>
			<widget class="SwatDetailsView" id="photo_date_view">
				<object class="SwatDetailsViewField" id="tags">
					<property name="title">Tags</property>
					<object class="SwatTextCellRenderer">
						<property name="content_type">text/xml</property>
					</object>
					<object class="SwatTextCellRenderer" id="date_links" />
				</object>
				<object class="SwatDetailsViewField" id="dimensions">
					<property name="title">Dimensions</property>
					<object class="SwatTextCellRenderer">
						<property name="content_type">text/xml</property>
					</object>
				</object>
				<object class="SwatDetailsViewField" id="photo_date">
					<property name="title">Taken</property>
					<object class="SwatDateCellRenderer">
						<property name="date" type="data">photo_date</property>
						<property name="display_time_zone" type="data">photo_time_zone</property>
						<property name="time_zone_format" type="constant">SwatDate::TZ_SHORT</property>
					</object>
					<object class="SwatTextCellRenderer" id="date_links">
						<property name="content_type">text/xml</property>
					</object>
				</object>
				<object class="SwatDetailsViewField" id="publish_date">
					<property name="title">Published</property>
					<object class="SwatDateCellRenderer">
						<property name="date" type="data">publish_date</property>
						<property name="time_zone_format" type="constant">SwatDate::TZ_SHORT</property>
					</object>
				</object>
			</widget>
			<widget class="SwatDisclosure" id="photo_details">
				<property name="title">Photo Metadata</property>
				<property name="open" type="boolean">false</property>
				<widget class="SwatDetailsView" id="photo_details_view" />
			</widget>
		</widget>
		<!-- }}} -->
		<!-- {{{ Comments -->
		<widget class="SwatFrame" id="comments_frame">
			<property name="visible" type="boolean">false</property>
			<property name="title" translatable="yes">Visitor Comments</property>
			<widget class="SwatContentBlock" id="comments">
				<property name="content_type">text/xml</property>
			</widget>
			<widget class="SwatDisplayableContainer" id="submit_comment">
				<property name="visible" type="boolean">false</property>
			</widget>
		</widget>
		<widget class="SwatFrame" id="comment_edit_frame">
			<property name="title" translatable="yes">Add a Comment</property>
			<widget class="SwatForm" id="comment_edit_form">
				<widget class="SwatMessageDisplay" id="preview_message_display" />
				<widget class="SwatContainer" id="comment_preview_container">
					<property name="visible" type="boolean">false</property>
					<widget class="SwatContentBlock" id="comment_preview" />
				</widget>
				<widget class="SwatMessageDisplay" id="message_display" />
				<widget class="SwatDisplayableContainer" id="comment_edit_details">
					<widget class="SwatFormField" id="fullname_field">
						<property name="title" translatable="yes">Name</property>
						<widget class="SwatEntry" id="fullname">
							<property name="required" type="boolean">true</property>
							<property name="maxlength" type="integer">255</property>
						</widget>
					</widget>
					<widget class="SwatFormField" id="link_field">
						<property name="title" translatable="yes">Website</property>
						<widget class="SwatUriEntry" id="link">
							<property name="maxlength" type="integer">255</property>
						</widget>
					</widget>
					<widget class="SwatFormField" id="email_field">
						<property name="title" translatable="yes">Email</property>
						<property name="note" translatable="yes">Email addresses are not displayed with your comment and will not be shared.</property>
						<widget class="SwatEmailEntry" id="email">
							<property name="maxlength" type="integer">255</property>
						</widget>
					</widget>
					<widget class="SwatFormField" id="rember_me_field">
						<property name="title" translatable="yes">Remember Me</property>
						<widget class="SwatCheckbox" id="remember_me" />
					</widget>
				</widget>
				<widget class="SwatFormField" id="comment_bodytext_field">
					<property name="title" translatable="yes">Comment</property>
					<property name="note" translatable="yes"><![CDATA[Allowed tags are: <em>, <strong>, <code> and <a href="url">. All other tags will be displayed as plain text.]]></property>
					<widget class="SwatTextarea" id="bodytext">
						<property name="required" type="boolean">true</property>
						<property name="rows" type="integer">8</property>
						<property name="resizeable" type="boolean">false</property>
						<property name="maxlength" type="integer">8000</property>
					</widget>
				</widget>
				<widget class="SwatFooterFormField">
					<widget class="SwatButton" id="preview_button">
						<property name="title" translatable="yes">Preview</property>
					</widget>
					<widget class="SwatButton" id="post_button">
						<property name="title" translatable="yes">Post</property>
					</widget>
				</widget>
			</widget>
		</widget>
		<!-- }}} -->
	</widget>
</swatml>
