<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="search_disclosure">
		<property name="title" translatable="yes">Search Photos</property>
		<widget class="SwatForm" id="search_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Keywords</property>
				<widget class="SwatEntry" id="search_keywords" />
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button">
					<property name="title" translatable="yes">Search</property>
				</widget>
			</widget>
		</widget>
	</widget>
	<widget class="SwatFrame" id="results_frame">
		<property name="title" translatable="yes">Photos</property>
		<property name="visible" type="boolean">false</property>
		<widget class="SwatContentBlock" id="results_message" />

		<widget class="SwatForm" id="index_form">
			<widget class="SwatTileView" id="index_view">
				<object class="SwatTile">
					<object class="SwatImageCellRenderer">
						<property name="image" type="data">image</property>
						<property name="height" type="data">height</property>
						<property name="width" type="data">width</property>
						<property name="occupy_height" type="data">max_height</property>
						<property name="occupy_width" type="data">max_width</property>
						<property name="alt" type="data">title</property>
					</object>
					<object class="AdminTitleLinkCellRenderer">
						<property name="text" type="data">title</property>
						<property name="link">Photo/Details?id=%s</property>
						<property name="link_value" type="data">id</property>
					</object>
					<object class="SwatDateCellRenderer">
						<property name="date" type="data">photo_date</property>
						<property name="format" type="constant">SwatDate::DF_DATE_SHORT</property>
					</object>
					<object class="PinholePhotoCheckboxCellRenderer" id="items">
						<property name="value" type="data">id</property>
					</object>
				</object>
			</widget>
			<widget class="AdminPagination" id="pager">
				<property name="link">Photo</property>
			</widget>
			<widget class="SwatActions" id="index_actions">
				<widget class="SwatActionItem" id="delete">
					<property name="title" translatable="yes">delete…</property>
				</widget>
				<widget class="SwatActionItem" id="tags_action">
					<property name="title" translatable="yes">add tag…</property>
				</widget>
				<widget class="SwatActionItem" id="unpublish_action">
					<property name="title" translatable="yes">unpublish photo</property>
					<widget class="SwatCheckbox" id="unpublish_reset_date" />
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
